 <h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">

    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="{{employee.Name}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>

    <div class="form-group">
        <label>Blood-Group</label>
        <input type="text" class="form-control" name="Description" placeholder="A+/A-/B+/B-/AB+/AB-/O+/O-" value="{{employee.Description}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Donated Amount</label>
        <input type="text" class="form-control" name="Completed" placeholder="250 ML" value="{{employee.Completed}}">
        <div class="text-danger">
            {{employee.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Date</label>
            <input type="text" class="form-control" name="Date" placeholder="xx/xx/xxxx" value="{{employee.Date}}">
        </div>
        <div class="form-group col-md-6">
            <label>Address Details</label>
            <input type="text" class="form-control" name="Time" placeholder="Address" value="{{employee.Time}}">
        </div>
        <div class="form-group col-md-6">
            <label>Age-Gender</label>
            <input type="text" class="form-control" name="AgeGender" placeholder="Age-Gender" value="{{employee.AgeGender}}">
        </div>
        <div class="form-group col-md-6">
            <label>Phone No</label>
            <input type="text" class="form-control" name="no" placeholder="Phone No" value="{{employee.no}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div> 
</form>